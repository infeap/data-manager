{% extends "@page/layout/message.twig" %}

{% block message_content %}
    <div id="inf-start-spinner" class="text-center" style="margin: 6rem 0 4rem 0" hidden>
        <figure class="inf-spinner" data-type="horizontal">
            <div class="spinner-border" role="status"></div>

            <figcaption>
                {{ 'initializing'|t }} ...
            </figcaption>
        </figure>
    </div>

    <script>
        document.getElementById('inf-start-spinner').removeAttribute('hidden')
    </script>

    <noscript>
        <h1>{{ 'error'|t }}</h1>

        <p>{{ 'noscript.message.1'|t }}</p>
        <p>{{ 'noscript.message.2'|t }}<br>
           {{ 'noscript.message.3'|t }}</p>
    </noscript>
{% endblock %}
