{% extends "@page/layout/basic-message.twig" %}

{% block message_symbol %}
    {% if message.type %}
        <figure class="-type-symbol text-{{ message.type }}" aria-hidden="true">
            {% if message.type == 'info' %}
                <svg class="bi bi-info-circle-fill" width="2.5rem" height="2.5rem" viewBox="0 0 16 16" fill="currentColor">
                    <path clip-rule="evenodd" fill-rule="evenodd" d="M8 16A8 8 0 108 0a8 8 0 000 16zm.93-9.412l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM8 5.5a1 1 0 100-2 1 1 0 000 2z" />
                </svg>
            {% elseif message.type == 'warning' or message.type == 'danger' %}
                <svg class="bi bi-exclamation-triangle-fill" width="2.5rem" height="2.5rem" viewBox="0 0 16 16" fill="currentColor">
                    <path clip-rule="evenodd" fill-rule="evenodd" d="M8.982 1.566a1.13 1.13 0 00-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5a.905.905 0 00-.9.995l.35 3.507a.552.552 0 001.1 0l.35-3.507A.905.905 0 008 5zm.002 6a1 1 0 100 2 1 1 0 000-2z" />
                </svg>
            {% elseif message.type == 'success' %}
                <svg class="bi bi-check-circle" width="2.5rem" height="2.5rem" viewBox="0 0 16 16" fill="currentColor">
                    <path clip-rule="evenodd" fill-rule="evenodd" d="M15.354 2.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3-3a.5.5 0 11.708-.708L8 9.293l6.646-6.647a.5.5 0 01.708 0z" />
                    <path clip-rule="evenodd" fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1013.5 8a.5.5 0 011 0 6.5 6.5 0 11-3.25-5.63.5.5 0 11-.5.865A5.472 5.472 0 008 2.5z" />
                </svg>
            {% endif %}
        </figure>
    {% endif %}
{% endblock %}

{% block message_heading message.heading %}

{% block message_content %}
    {% for line in message.descriptionLines %}
        <p>{{ line }}</p>
    {% endfor %}
{% endblock %}
